<UserControl
    x:Class="LykkeWalletApp.Controls.RegistrationHeader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LykkeWalletApp.Models"
        xmlns:models="using:LykkeWalletApp.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="100"
    d:DesignWidth="400">

    <StackPanel>
        <TextBlock HorizontalAlignment="Center" Padding="10" FontSize="20" Text="{Binding Path=Header}"/>
        <TextBlock HorizontalAlignment="Center" Padding="10" FontSize="16" Text="{Binding Path=Description}"/>
    </StackPanel>
</UserControl>
